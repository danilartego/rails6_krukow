<% provide :page_title, 'Question'%>
<% currently_at 'Questions' %>

<h1 class="mb-4"> Вопросы </h1>

<%= link_to 'New question', new_question_path, class: 'btn btn-primary btn-lg mb-3' %>

<%== pagy_bootstrap_nav @pagy %>

<% @questions.each do |q|  %>
  <article class="card my-3">
    <div class="card-body">
      <h4><%= q.title%></h4>
      
      <section class="card-text">
        <time datetime="<%= q.formatted_created_at%>">
          <small><%= q.formatted_created_at %></small>
        </time>

        <p class="my-2">
          <%= truncate strip_tags(q.body), length: 100, omission: ' ... (continued)' %> <%# strip_tags удаляем все теги %>
        <p>
      </section>

      <%= link_to 'Show', question_path(q), class: 'btn btn-primary' %>
      <%= link_to 'Edit', edit_question_path(q), class: 'btn btn-secondary' %>
      <%= link_to 'Delete', question_path(q), class: 'btn btn-danger', 
        data: {method: :delete, confirm: 'Are you shure?'} %>
    </div>
  </article>
<% end %>

<%== pagy_bootstrap_nav @pagy %>