<h1 class="mb-4"> Вопрос </h1>
<h1 class="mb-4"> <%= @question.title %> </h1>

<time datetime="<%= @question.formatted_created_at%>">
  <%= @question.formatted_created_at %>
</time>

<p class="lead my-3"> <%= @question.body%> </p>
<p class="lead my-3"> <%= "Количество ответов: #{@answers.count}" %> </p>

<%= link_to 'Show', question_path(@question), class: 'btn btn-primary' %>
<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
<%= link_to 'Delete', question_path(@question), class: 'btn btn-danger', 
  data: {method: :delete, confirm: 'Are you shure?'} %>

<hr class="my-3">

<h2> Написать ответ </h2>

<%= render 'shared/errors', object: @answer%>

<%= form_with model: [@question, @answer] do |f| %>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Submit answer!", class: 'btn btn-primary' %>
<% end %>

<hr class="my-3">
<h2 class="mt-5"> Другие ответы </h2>

<% @answers.each do |answer| %>
  <article class="mb-3">
  
    <time datetime="<%= answer.formatted_created_at%>">
      <%= answer.formatted_created_at %>
    </time>

    <p> <%= answer.body%> </p>
    <p> <%= answer.question_id%> </p>
    <%= link_to 'Delete', question_answer_path(@question, answer), class: 'btn btn-danger btn-sm',
      data: {method: :delete, confirm: "Are you shure?"} %>

  </article>
<% end %>

